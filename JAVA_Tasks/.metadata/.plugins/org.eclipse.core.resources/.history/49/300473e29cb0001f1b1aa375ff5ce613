public class Welcome {
	
	 public static final String ANSI_GREEN_BACKGROUND = "\u001B[42m";
	 public static final String ANSI_WHITE_TEXT = "\u001B[37m";
	 public static final String ANSI_RESET = "\u001B[0m";
	
	public static void showWelcomePage() {
        System.out.println(ANSI_GREEN_BACKGROUND + ANSI_WHITE_TEXT+"*****************************************************************");
        System.out.println("*			WELCOME TO DULCET			*");
        System.out.println("*			MUSIC PLAYER APP			*");
        System.out.println("*****************************************************************"+ ANSI_RESET);
        System.out.println("*			Let's Play Music!			*");
        System.out.println("*****************************************************************");
    }
	
	public static void showExitMessage() {
		System.out.println("*****************************************************************");
        System.out.println("*          THANKS FOR USING            *");
        System.out.println("*            	OUR APP                *");
        System.out.println("*****************************************************************");
	}

}
