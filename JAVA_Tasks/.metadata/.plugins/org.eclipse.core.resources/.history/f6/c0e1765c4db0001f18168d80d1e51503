//		userRegisteredDate.get
		String insertUserQuery = "insert into AccountCreator values("+userId+", "+userName+", "+userEmail+", "+userMobileNumber+", "+userPassword+", "+userRegisteredDate+")";
//		String userId = String.format("%04d", random.nextInt(10000));
		
